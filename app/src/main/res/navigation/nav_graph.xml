<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="edu.fsu.cs.littlepetz.IntroFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/intro_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="edu.fsu.cs.littlepetz.PetPickerFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/pet_picker">
        <action
            android:id="@+id/action_SecondFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/ThirdFragment"
        android:name="edu.fsu.cs.littlepetz.HomePageFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/home_page_fragment">

    </fragment>

</navigation>